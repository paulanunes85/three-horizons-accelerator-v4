{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
  "default": true,
  "MD001": true,
  "MD003": {
    "style": "atx"
  },
  "MD004": {
    "style": "dash"
  },
  "MD007": {
    "indent": 2
  },
  "MD009": {
    "br_spaces": 2,
    "list_item_empty_lines": false
  },
  "MD010": {
    "code_blocks": false
  },
  "MD012": {
    "maximum": 2
  },
  "MD013": {
    "line_length": 200,
    "heading_line_length": 200,
    "code_block_line_length": 200,
    "code_blocks": false,
    "tables": false
  },
  "MD022": {
    "lines_above": 1,
    "lines_below": 1
  },
  "MD024": {
    "siblings_only": true
  },
  "MD025": {
    "level": 1,
    "front_matter_title": "^\\s*title\\s*[:=]"
  },
  "MD026": {
    "punctuation": ".,;:!?"
  },
  "MD029": {
    "style": "ordered"
  },
  "MD030": {
    "ul_single": 1,
    "ol_single": 1,
    "ul_multi": 1,
    "ol_multi": 1
  },
  "MD033": {
    "allowed_elements": [
      "br",
      "details",
      "summary",
      "img",
      "a",
      "sup",
      "sub",
      "kbd",
      "mark",
      "table",
      "thead",
      "tbody",
      "tr",
      "th",
      "td"
    ]
  },
  "MD034": true,
  "MD035": {
    "style": "---"
  },
  "MD036": {
    "punctuation": ".,;:!?。，；：！？"
  },
  "MD040": true,
  "MD041": true,
  "MD042": true,
  "MD044": {
    "names": [
      "Three Horizons",
      "Azure",
      "Kubernetes",
      "ArgoCD",
      "Terraform",
      "GitHub",
      "Backstage",
      "RHDH"
    ],
    "code_blocks": false
  },
  "MD045": true,
  "MD046": {
    "style": "fenced"
  },
  "MD047": true,
  "MD048": {
    "style": "backtick"
  },
  "MD049": {
    "style": "asterisk"
  },
  "MD050": {
    "style": "asterisk"
  },
  "MD051": true,
  "MD052": true,
  "MD053": true
}
