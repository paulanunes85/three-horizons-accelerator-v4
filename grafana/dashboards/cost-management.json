        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "(sum(rate(llm_tokens_total{type=\"input\"}[5m])) by (model) * 0.00001 + sum(rate(llm_tokens_total{type=\"output\"}[5m])) by (model) * 0.00003) * 300",
          "legendFormat": "{{ model }}",
          "refId": "A"
        }
