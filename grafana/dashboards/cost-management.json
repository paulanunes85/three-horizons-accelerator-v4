      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${datasource}" },
          "expr": "bottomk(20, sum(rate(container_cpu_usage_seconds_total{container!=\"\", container!=\"POD\"}[1h])) by (namespace, pod) / sum(kube_pod_container_resource_requests{resource=\"cpu\"}) by (namespace, pod))",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "title": "Under-utilized Pods (Candidates for Rightsizing)",
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true },
            "renameByName": { "Value": "CPU Usage", "namespace": "Namespace", "pod": "Pod" }
          }
        }
      ],
      "type": "table"
